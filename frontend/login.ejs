<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | <%= name %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* subtle glow for hover */
    .discord-btn:hover {
      box-shadow: 0 0 20px rgba(88, 101, 242, 0.6);
    }
  </style>
</head>
<body class="flex items-center justify-center min-h-screen relative overflow-hidden">

<div class="absolute inset-0 flex flex-col">
  <!-- Top half with gradient -->
  <div class="h-1/2 bg-gradient-to-b from-[#0a0a0a] to-[#1a1a1a] backdrop-blur-2xl"></div>
  <!-- Bottom half with gradient -->
  <div class="h-1/2 bg-gradient-to-b from-[#242424] to-[#1a1a1a] backdrop-blur-2xl"></div>
</div>

<!-- login box -->
<div class="relative bg-[#111111]/90 p-12 rounded-3xl shadow-2xl w-96 text-center">
  <h1 class="text-white text-4xl font-bold mb-4">Welcome Back!</h1>
  <p class="text-gray-400 mb-8">Login to <%= name %></p>

  <% if (error) { %>
    <p id="error-msg" class="text-red-500 mb-4 font-semibold"><%= error %></p>
  <% } %>

  <!-- Username/Password form -->
  <form action="/login" method="POST" class="space-y-4 text-left mb-6">
    <div>
      <label for="email" class="block text-gray-300 text-sm mb-1">Email</label>
      <input type="text" id="email" name="email" required
        class="w-full px-4 py-2 rounded-xl bg-[#1a1a1a] border border-gray-700 text-white focus:outline-none focus:border-gray-400">
    </div>

    <div>
      <label for="password" class="block text-gray-300 text-sm mb-1">Password</label>
      <input type="password" id="password" name="password" required
        class="w-full px-4 py-2 rounded-xl bg-[#1a1a1a] border border-gray-700 text-white focus:outline-none focus:border-gray-400">
    </div>

    <button type="submit"
      class="w-full bg-white text-black font-semibold rounded-xl py-3 hover:bg-gray-200 transition">
      Login
    </button>
  </form>

  <!-- Divider -->
  <div class="flex items-center my-4">
    <div class="flex-grow border-t border-gray-700"></div>
    <span class="px-3 text-gray-400 text-sm">OR</span>
    <div class="flex-grow border-t border-gray-700"></div>
  </div>

  <!-- Discord login -->
  <a href="/auth/discord"
     class="discord-btn flex items-center justify-center bg-white font-semibold rounded-2xl px-8 py-3 transition duration-300">
     <img src="https://cdn-icons-png.flaticon.com/512/2111/2111370.png" 
          alt="Discord" class="w-6 h-6 mr-3">
     Sign In/Up with Discord
  </a>

  <!-- Register link -->
  <p class="text-gray-400 text-sm mt-6">
    Donâ€™t have an account? 
    <a href="/register" class="text-white font-semibold hover:underline">Register</a>
  </p>
</div>
</body>
</html>
